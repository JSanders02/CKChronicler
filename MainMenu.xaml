<Page x:Class="CKChronicler.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CKChronicler"
      mc:Ignorable="d"
      Title="MainMenu" Height="450" Width="800">
    <!-- Load Styles -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid x:Name="MainWindowLayout">
        <!-- Include required resources -->
        <Grid.Resources>
            <ImageBrush x:Key="Banner" ImageSource="Resources/Images/banner.png" />
        </Grid.Resources>
        
        <Grid.Background>
            <ImageBrush ImageSource="Resources/Images/court_img_001.png"></ImageBrush>
        </Grid.Background>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.RowSpan="2" VerticalAlignment="Top" Width="700" Height="128"
                   TextAlignment="Center" Padding="0 12 0 0"
                   Foreground="White" Background="{StaticResource Banner}"
                   FontSize="64" FontFamily="{StaticResource MissaleASLunea}" Text="CK Chronicler" />
        
        <Button x:Name="StartBtn" ClickMode="Release" Click="StartBtn_OnClick"
                Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="256" Height="32"
                Margin="0 16" FontSize="24">
            
            <!-- Slightly round button corners -->
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Button.Resources>
            
            CREATE NEW
            
        </Button>
        
        <Button x:Name="ContBtn" ClickMode="Release" 
                Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="256" Height="32"
                Margin="0 16" FontSize="24">
            
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Button.Resources>
            
            LOAD EXISTING
        </Button>
        
        <Button x:Name="ViewBtn" ClickMode="Release"
                Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0 16" Width="256" Height="32"
                FontSize="24">
            
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Button.Resources>
            
            VIEW COMPLETED
        </Button>
    </Grid>
</Page>
